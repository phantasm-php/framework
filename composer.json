{
    "name": "phantasm-php/framework",
    "version": "dev-main",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmytro Morozov",
            "email": "puny.flash@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.0",
        "psr/container": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-message": "^2.0",
        "symfony/console": "^7.3",
        "psr/event-dispatcher": "^1.0",
        "league/route": "^6.2"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "carthage-software/mago": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Phantasm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "framework": {
            "discover": true
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "carthage-software/mago": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
